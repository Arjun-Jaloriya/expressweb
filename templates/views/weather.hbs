 <script src="js/main.js"></script>
 <script>
   
    const getcurrentday= () => {
            var weekday=new Array(7);
            weekday[0]="sunday";
            weekday[1]="monday";
            weekday[2]="tuesday";
            weekday[3]="wed";
            weekday[4]="thu";
            weekday[5]="friday";
            weekday[6]="saturday";

            let currentday=new Date();
            days=(weekday[currentday.getDay()]);
             let day=document.getElementById("day");
            day.innerText=days;
        };
        getcurrentday();
 </script>
